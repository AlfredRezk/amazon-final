<div class="card p-1">
  <a href="#">
    <img class="p-8 rounded-t-lg" src="{{product.image}}" alt="product image" />
  </a>
  <div class="px-5 pb-5">
    <a href="#">
      <h5
        class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white"
      >{{product.title}}</h5>
    </a>

    <div class="flex items-center justify-between mt-5">
      <span
        class="text-3xl font-bold text-orange-600 dark:text-white"
      >${{product.price}}</span>
      <a href="#" class="btn btn-primary mt-2">Add to cart</a>
    </div>
  </div>
</div>